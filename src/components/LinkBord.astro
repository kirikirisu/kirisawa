---
import Bord from "./Bord.astro";
const { siteName, siteUrl, userId, class: className } = Astro.props;
---

<Bord class={className}>
  <a href={siteUrl} target="_blank" rel="noopener">
    <h2>{siteName}</h2>
    <p>{userId}</p>
  </a>
</Bord>

<style>
  a {
    display: block;
    width: 100%;
    height: 100%;
    padding: 15px;
  }
  h2 {
    font-size: 16px;
  }
  p {
    font-size: 14px;
    color: rgba(0, 0, 0, 0.6);
  }
</style>
